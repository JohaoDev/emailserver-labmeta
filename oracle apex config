function sendEmail () {
    const url = 'http://localhost:5000/send_mail',
          user_data = {
              "data": {
                    "emailTo": "perlazajohao@gmail.com",
                    "subject": "Nodemailer server",
                    "message": "Message example"
              }
          }
    
    axios.post(url, user_data)
    .then(response => {
        response.data.ok ? alert("Correo enviado exitosamente") : alert("Algo salio mal, intentelo de nuevo mÃ¡s tarde")
    })
    .catch(error => console.error(error))
}


